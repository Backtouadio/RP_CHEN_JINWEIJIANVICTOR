<!--game_control.launch (Using regular control node) --> 
<launch>
    <!-- Game node with parameters (no separate terminal needed) -->
    <node name="game_node" pkg="RP_CHEN_JINWEIJIANVICTOR" type="game_node.py" output="screen">
        <param name="user_name" value="default_user" type="string"/>
        <param name="change_player_color" value="1" type="int"/>
        <param name="screen_param" value="phase1" type="string"/>
    </node>
    
    <!-- Info user node (separate terminal for input) -->
    <node name="info_user" pkg="RP_CHEN_JINWEIJIANVICTOR" type="info_user.py" output="screen"
          launch-prefix="xterm -hold -title 'User Input' -e"/>
    
    <!-- Control node (no separate terminal) -->
    <node name="control_py_node" pkg="RP_CHEN_JINWEIJIANVICTOR" type="control_py_node.py" output="screen"
    launch-prefix="xterm -hold -title 'Game Control' -e"/>
    
    <!-- Result node (separate terminal for results) -->
    <node name="result_node" pkg="RP_CHEN_JINWEIJIANVICTOR" type="result_node.py" output="screen"
          launch-prefix="xterm -hold -title 'Game Results' -e"/>
</launch>